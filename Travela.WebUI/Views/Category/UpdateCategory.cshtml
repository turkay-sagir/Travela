@model Travela.WebUI.Dtos.UpdateCategoryDto
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <form method="post">
        <input type="hidden" asp-for="categoryId" />
        <label>Kategori Adı</label>
        <input type="text" asp-for="categoryName" class="form-control" />
        <br />

        <label>Kategori Görseli</label>
        <input type="text" asp-for="imageUrl" class="form-control" />
        <br />
        <button class="btn btn-primary">Kategoriyi Güncelle</button>
    </form>
</div>